<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8D7A4F"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.JoinActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="#90000000"
        android:layout_marginTop="60dp"
        >

        <EditText
            android:id="@+id/check_in_date"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "입실날짜 "
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:id="@+id/check_in_time"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "일실시간"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/check_out_time"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "퇴실날짜"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/useTime"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "이용시간"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/roomNumber"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "이용장소"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/reason"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "이용목적"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/otherMembers"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "회의 참여자"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/button_makereservation"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="예약하기"
        android:textColor="#FFFFFF"
        android:background="#1D4A4F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:onClick="onClickedMakeReservation"
        />

</LinearLayout>

