<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff972730"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.UserActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입실 날짜"
        android:id="@+id/check_in_date"
        android:layout_weight="0.03"
        android:clickable="true"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입실 시간"
        android:id="@+id/check_in_time"
        android:layout_weight="0.03"
        android:clickable="true"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="퇴실시간"
        android:id="@+id/check_out_time"
        android:layout_weight="0.03"
        android:clickable="true"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용시간"
        android:id="@+id/useTime"
        android:layout_weight="0.03"
        android:clickable="false"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용장소"
        android:id="@+id/roomNumber"
        android:layout_weight="0.03"
        android:clickable="false"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용목적"
        android:id="@+id/reason"
        android:layout_weight="0.03"
        android:clickable="false"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여자"
        android:id="@+id/otherMembers"
        android:layout_weight="0.03"
        android:clickable="false"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_reservation_status"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
        android:text="예약하기"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
