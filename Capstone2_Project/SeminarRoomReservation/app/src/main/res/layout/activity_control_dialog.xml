<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.Manager.ControlDialogActivity">
    <TextView
        android:id="@+id/text_DoorStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="13pt"
        android:text="@string/text_door_status"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_DoorOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#7CFC00"
            android:drawableLeft="@drawable/img_unlock"
            android:text="@string/btn_control_dialog_open"/>

        <Button
            android:id="@+id/btn_DoorClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#DC143C"
            android:drawableLeft="@drawable/img_lock"
            android:text="@string/btn_control_dialog_close"/>


    </LinearLayout>



</LinearLayout>
