<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.User.SettingFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        >

    <Button
        android:id="@+id/button_logout"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#90124F54"
        android:text="로그아웃"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#90249386"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:text="알람 설정"
            android:textSize="13dp"
            />

        <CheckBox
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#50FFFFFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세미나실 예약 서비스"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop= "40dp"
            android:layout_marginLeft="60dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버전정보"
                android:textSize="13dp"
                android:layout_marginTop= "15dp"
                android:layout_marginLeft="60dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.1"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginTop= "17dp"
                android:layout_marginLeft="100dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자"
                android:textSize="13dp"
                android:layout_marginTop= "15dp"
                android:layout_marginLeft="60dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="openIt@gmail.com"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginTop= "17dp"
                android:layout_marginLeft="100dp"
                />


        </LinearLayout>
        <Button
            android:id="@+id/gcm"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#80ef6070"
            android:layout_marginTop= "17dp"
            android:layout_marginLeft="60dp"
            android:text="GCMTEST"
            />



    </LinearLayout>
    </LinearLayout>
</FrameLayout>
