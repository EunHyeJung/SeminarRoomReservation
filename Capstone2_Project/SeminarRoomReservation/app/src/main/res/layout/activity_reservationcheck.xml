<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.JoinActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></FrameLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="#90000000"
        android:layout_marginTop="60dp"
        >

        <!--예약자-->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:text="예약자"
                android:id="@+id/Username" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:inputType="text"
                android:editable="false"
                android:enabled="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="center_horizontal"
                />

        </LinearLayout>


        <!--입실날짜-->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:text="입실날짜"
                android:id="@+id/check_in_date" />

            <TextView
                android:id="@+id/selectedcheckInDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:inputType="date"
                android:editable="false"
                android:enabled="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

        <!--입실시간-->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:layout_marginTop="5dp"
                android:text="입실시간"
                android:id="@+id/check_in_time" />

            <TextView
                android:id="@+id/selectedcheckInTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:inputType="time"
                android:clickable="true"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <!--퇴실시간-->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:layout_marginTop="5dp"
                android:text="퇴실시간"
                android:id="@+id/check_out_time" />

            <TextView
                android:id="@+id/selectedcheckOutTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:inputType="time"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <!--이용목적-->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:layout_marginTop="5dp"
                android:text="이용목적"
                android:id="@+id/context" />

            <TextView
                android:id="@+id/selectedtxt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <!--이용장소-->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:layout_marginTop="13dp"
                android:text="이용장소"
                android:id="@+id/text_roomNumber" />

            <TextView
                android:id="@+id/selectedroom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="center_horizontal"
                />

        </LinearLayout>


        <!--참여자 -->
        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="29dp"
                android:layout_marginTop="13dp"
                android:text="회의 참여자"
                android:id="@+id/text_memberlist" />
            <TextView
                android:id="@+id/selectedmember"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="163dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="center_horizontal"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button_yes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="예약 승인"
            android:textColor="#FFFFFF"
            android:background="#1D4A4F"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickYes"
            android:layout_weight="0.37" />

        <Button
            android:id="@+id/button_no"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="예약 거절"
            android:textColor="#FFFFFF"
            android:background="#1D4A4F"
            android:layout_marginLeft="50dp"
            android:onClick="onClickNo"
            />
    </LinearLayout>

</LinearLayout>
