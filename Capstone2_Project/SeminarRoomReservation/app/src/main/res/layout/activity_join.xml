<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.Join.JoinActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="#90000000"
        android:layout_marginTop="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="회원가입"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/editText_joinId"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "ID"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:id="@+id/editText_joinPassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "Password"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/editText_joinName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/editText_joinPhone"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint = "Phone Number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/button_joinRequest"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="가입하기"
            android:textColor="#FFFFFF"
            android:background="#1D4A4F"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            />

    </LinearLayout>

</LinearLayout>
