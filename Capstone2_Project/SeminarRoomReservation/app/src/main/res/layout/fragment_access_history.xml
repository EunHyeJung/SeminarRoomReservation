<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff253c6c"
    tools:context="kr.ac.kookmin.cs.capstone2.seminarroomreservation.Manager.AccessHistoryFragment">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            >
            <Button
                android:id="@+id/btn_dayWatch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:text="날짜별 보기"
                />

            <Spinner
                android:id="@+id/spinner_room_watch"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_gravity="right"
                >
            </Spinner>
        </LinearLayout>

        <ListView
            android:id="@+id/SeminarLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

</FrameLayout>
